<!--pages/personalHomepage/peho.wxml-->
<view class='container'>
  <view class="list">
    <view class="item">
      <view>手机号码</view>
      <view>{{userID}}</view>
    </view>
    <view class="item">
      <view>性别</view>
      <view>{{sex}}</view>
    </view>
    <view class="item">
      <view>出生日期</view>
      <view>{{birthDate}}</view>
    </view>
    <view class="item">
      <view>身高</view>
      <view>{{height}}</view>
    </view>
    <view class="item">
      <view>体重</view>
      <view>{{weight}}</view>
    </view>
    <view class="item" bindtap="gotoPlan">
      <view>当前分级</view>
      <view class="level">{{level}}</view>
    </view>
  </view>
  <button type="default" style="width: 200rpx; margin: auto; margin-top: 20rpx;" bindtap="exit">退出</button>
</view>
